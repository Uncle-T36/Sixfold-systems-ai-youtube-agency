# AI YouTube Agency - Environment Variables Template
# Copy this to .env.local and fill in your actual keys

# ==============================================
# CORE AI TOOLS (Required for basic functionality)
# ==============================================

# GitHub Copilot Integration (Your existing subscription)
GITHUB_COPILOT_TOKEN=your_github_copilot_token_here
GITHUB_COPILOT_BASE_URL=https://api.github.com/copilot/chat/completions

# ==============================================
# FREE STOCK MEDIA APIs (Optional but recommended)
# ==============================================

# Unsplash API (FREE - 50 requests/hour)
# Get key: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# Pexels API (FREE - 200 requests/hour)  
# Get key: https://www.pexels.com/api/
PEXELS_API_KEY=your_pexels_api_key_here

# ==============================================
# YOUTUBE INTEGRATION (Required for uploads)
# ==============================================

# YouTube Data API (FREE - 10,000 requests/day)
# Get key: https://console.cloud.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# ==============================================
# TEXT-TO-SPEECH SERVICES (Optional backups)
# ==============================================

# Google TTS Free Tier (1 million characters/month)
GOOGLE_TTS_TOKEN=your_google_tts_token_here

# ElevenLabs (Optional premium TTS)
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# ==============================================
# REVENUE COLLECTION SYSTEM (For SaaS monetization)
# ==============================================

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_STARTER_MONTHLY=price_starter_monthly_id
STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_professional_monthly_id
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly_id
STRIPE_PRICE_PROFESSIONAL_YEARLY=price_professional_yearly_id

# ==============================================
# DATABASE (For user management and analytics)
# ==============================================

# PostgreSQL Database (Free tier available on Vercel/Supabase)
DATABASE_URL=postgresql://username:password@host:port/database
POSTGRES_PRISMA_URL=postgresql://username:password@host:port/database?pgbouncer=true&connect_timeout=15
POSTGRES_URL_NON_POOLING=postgresql://username:password@host:port/database

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================

# JWT Secret for user sessions
JWT_SECRET=your_super_secret_jwt_key_here

# NextAuth.js (if using OAuth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# ==============================================
# DEPLOYMENT SETTINGS
# ==============================================

# Environment
NODE_ENV=development

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ==============================================
# MONITORING & ANALYTICS (Optional)
# ==============================================

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Google Analytics (Optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ==============================================
# REVENUE TARGETS & BUSINESS METRICS
# ==============================================

# Business Configuration
BUSINESS_OPERATIONAL_COSTS=2000
BUSINESS_TARGET_MRR=10000
BUSINESS_BREAK_EVEN_MONTHS=12

# ==============================================
# FEATURE FLAGS
# ==============================================

# Enable/disable features
FEATURE_STRIPE_PAYMENTS=true
FEATURE_FREE_TRIAL=true
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_REFERRAL_SYSTEM=false

